{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "database/**/*", "ops/**/*"],
  "exclude": ["node_modules"]
}
